     {% block bodyContainer %}
         <button style="height: 50px;font-size: 14px;border-radius: 25px;font-weight: bold;" class="buttonX  arrow" onclick="location.href = '{{ path("property_addpage")  }}';">Add Property</button><br/><br/>
         <div style="margin-left: 70px">
         {% if logements is empty %}
             <img style="margin-top:30px;margin-left: 200px" src="{{ asset('images/uploads/noP.png') }}">
         {% endif %}
         {% for log in logements %}
             <div class="card card--big" style="float: left;outline: none; margin-bottom: 40px;margin-right: 12px;">
                 <div class="card__image" style="background-image: url({{ log.imagesPath[0]|replace({'C:/xampp/htdocs': "localhost"}) }})"></div>
                 <h2 class="card__title">Property - {{ loop.index }}  </h2><span class="card__subtitle"></span>
                 <p class="card__text"><b>Description :</b> {{ log.description|slice(0, 25) ~ '...'  }} <br>
                     <b>Room Number :</b> {{ log.nbRooms }}  <br>
                     <b>Price :</b> {{ log.price }} TND  <br>
                     <b>Published :</b> {{ log.publicationDate.format('d/m/Y') }}  <br>
                     <b>Equipements :</b> {% for item in log.equipements %} {{ item }}
                     {% endfor %}</p>
                 <div class="card__action-bar" style="padding-top: 8px">
                     <button type="button" class="btn btn-primary" onclick="location.href = '{{ path("property_detailProp", {"id":log.id})  }}';">Details</button>
                     <button type="button" class="btn btn-success" onclick="location.href = '{{ path("property_updateProp", {"id":log.id})  }}';">Update</button>
                     <button type="button" class="btn btn-danger" onclick="location.href = '{{ path("property_delProp", {"id":log.id})  }}';">Supprimer</button>
                 </div>
             </div>
         {% endfor %}
         </div>
    {% endblock bodyContainer  %}