{% extends "UserBundle::layoutLogin.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}
    <div class="omb_login" style="width:1100px">
        <h3 class="omb_authTitle">Login or <a href="{{ path('fos_user_registration_register') }}" >SignUp </a></h3>
        <div class="row omb_row-sm-offset-3 omb_socialButtons">
            <div class="col-xs-4 col-sm-2">
                <a href="login/facebook" class="btn btn-lg btn-block omb_btn-facebook">
                    <i class="fa fa-facebook visible-xs"></i>
                    <span class="hidden-xs">Facebook</span>
                </a>
            </div>
        </div>

        <div class="row omb_row-sm-offset-3 omb_loginOr">
            <div class="col-xs-12 col-sm-6">
                <hr class="omb_hrOr">
                <span class="omb_spanOr">or</span>
            </div>
        </div>

        <div class="row omb_row-sm-offset-3">
            <div class="col-xs-12 col-sm-6">
                {% trans_default_domain 'FOSUserBundle' %}

                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form class="omb_loginForm" action="{{ path("fos_user_security_check") }}" method="post" autocomplete="off">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"  class="form-control"  placeholder="Username..">
                    </div>
                    <span class="help-block"></span>

                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        <input type="password" id="password" name="_password" required="required"  class="form-control" placeholder="Password..">
                    </div>

                    <div style="margin-top: 10px;" class="input-group">
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                        <input style="width: 15px;height: 15px" type="checkbox" id="remember_me" name="_remember_me" value="on"   class="form-control" >
                    </div>
                    <span class="help-block"></span>
                    <input class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                    <input type="hidden" name="_csrf_token" value="{{ fos_csrf_provider.refreshToken('authenticate') }}" />
                </form>
            </div>
        </div>

    </div>
{% endblock fos_user_content %}
