{% extends "@User/layoutRegister.html.twig" %}

{% block fos_user_content %}

    {% trans_default_domain 'FOSUserBundle' %}

    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'role':'form','class': 'fos_user_registration_register','style':'margin-left:100px'}}) }}
    <h2>Please Sign Up <small>Host and Guest is free and always will be.</small></h2>
    <hr class="colorgraph">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
                {{ form_errors(form.first_name) }}
                {{ form_widget(form.first_name, { 'attr': {'class': 'form-control input-lg','placeholder':'Firstname'} }) }}
                <!--   <input type="text" name="first_name" id="first_name" class="form-control input-lg" placeholder="First Name" tabindex="1"> -->
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
                {{ form_errors(form.last_name) }}
                {{ form_widget(form.last_name, { 'attr': {'class': 'form-control input-lg','placeholder':'Lastname'} }) }}
                <!--   <input type="text" name="last_name" id="last_name" class="form-control input-lg" placeholder="Last Name" tabindex="2"> -->
            </div>
        </div>
    </div>
    <div class="form-group">
        {{ form_errors(form.username)}}
        {{ form_widget(form.username, { 'attr': {'class': 'form-control input-lg','placeholder':'Username'} }) }}
        <!-- <input type="text" name="display_name" id="display_name" class="form-control input-lg" placeholder="Display Name" tabindex="3"> -->
    </div>
    <div class="form-group">
        {{ form_errors(form.email) }}
        {{ form_widget(form.email, { 'attr': {'class': 'form-control input-lg','placeholder':'Email'} }) }}
        <!-- <input type="email" name="email" id="email" class="form-control input-lg" placeholder="Email Address" tabindex="4"> -->
    </div>
    <div class="row">
        <div style="width: 480px" class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
                {{ form_errors(form.plainPassword.first)}}
                {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control input-lg','placeholder':'Password'} })  }}
                {{ form_errors(form.plainPassword.second)}}
                {{ form_widget(form.plainPassword.second, { 'attr': {'style':'margin-top:15px','class': 'form-control input-lg','placeholder':'Repeat Password'} })  }}
                <!--   <input type="password" name="password" id="password" class="form-control input-lg" placeholder="Password" tabindex="5"> -->

            </div>

    </div>
        </div>

    <hr class="colorgraph">
    <div class="row">
        <div class="col-xs-12 col-md-6"><input type="submit" class="btn btn-primary btn-block btn-lg" tabindex="7" value="{{ 'registration.submit'|trans }}" /></div>
        <div class="col-xs-12 col-md-6"><a href="{{ path('fos_user_security_login') }}" class="btn btn-success btn-block btn-lg">Sign In</a></div>
    </div>
    {{ form_end(form) }}

{% endblock fos_user_content %}
